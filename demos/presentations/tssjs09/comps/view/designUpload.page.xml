<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
		http://jboss.com/products/seam/pages
		http://jboss.com/products/seam/pages-2.1.xsd"
	login-required="true">

	<param name="company" value="#{companyHome.companyId}"/>

	<restrict>#{s:hasRole('admin') or s:hasPermission(design, 'upload')}</restrict>

	<action execute="#{companyHome.load}"/>
 
 	<begin-conversation/>
 
	<navigation from-action="#{companyHome.load}">
		<rule if="#{companyHome.definedInstance == null}">
			<redirect view-id="/CompanyList.xhtml">
				<message severity="WARN">You must first select a company.</message>
			</redirect>
		</rule>
	</navigation>

	<navigation from-action="#{designManager.upload}">
		<end-conversation/>
		<redirect view-id="/designs.xhtml"/>
		<!--
		<redirect view-id="/design.xhtml">
			<param name="design" value="#{designHome.designId}"/>
			<param name="company" value="#{company}"/>
		</redirect>
		-->
	</navigation>

</page>

