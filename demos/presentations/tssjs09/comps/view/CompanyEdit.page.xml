<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.1.xsd"
      no-conversation-view-id="/CompanyList.xhtml"
      login-required="true">

   <begin-conversation join="true" flush-mode="MANUAL"/>

   <action execute="#{companyHome.wire}"/>

   <param name="companyFrom"/>
   <param name="companyId" value="#{companyHome.companyId}"/>


   <navigation from-action="#{companyHome.persist}">
      <rule>
         <end-conversation/>
         <redirect view-id="/Company.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{companyHome.update}">
      <rule>
         <end-conversation/>
         <redirect view-id="/Company.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{companyHome.remove}">
      <rule>
         <end-conversation/>
         <redirect view-id="/CompanyList.xhtml"/>
      </rule>
   </navigation>

</page>
