<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
		http://jboss.com/products/seam/pages
		http://jboss.com/products/seam/pages-2.0.xsd"
	login-required="true">

	<description>Activities (#{results.rowCount}) - Last used: #{currentTime}</description>
	
	<begin-conversation join="true" flush-mode="manual"/>

	<action execute="#{activityListEditor.prepareResults}"/>

	<navigation from-action="#{activityListEditor.forwardToResults(_item)}">
		<rule if-outcome="field">
			<redirect view-id="/fldmsmnts.xhtml">
				<param name="actUid" value="#{param.actUid}" />
				<param name="actId" value="#{param.actId}" />
				<param name="mlocUid" value="#{param.mlocUid}" />
				<param name="mlocName" value="#{param.mlocName}" />
			</redirect>
		</rule>
		<rule if-outcome="benthic">
			<redirect view-id="/benmsmnts.xhtml">
				<param name="actUid" value="#{param.actUid}" />
				<param name="actId" value="#{param.actId}" />
				<param name="mlocUid" value="#{param.mlocUid}" />
				<param name="mlocName" value="#{param.mlocName}" />
			</redirect>
		</rule>
	</navigation>
	
	<navigation from-action="#{activityListEditor.back()}">
		<rule if-outcome="back">
			<redirect view-id="/mlocs.xhtml">
			</redirect>
		</rule>
	</navigation>
</page>
